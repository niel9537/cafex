<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linierLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    android:paddingLeft="30dp"
    android:paddingRight="30dp"
    tools:context=".MenuAuth.RegistrasiUser">
    <Button
        android:id="@+id/backregistrasilogin"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@android:color/white"
        android:background="@drawable/view"
        android:text="LOGIN"
        android:drawableLeft="@drawable/ic_back"
        android:padding="5dp"/>

    <TextView
        android:layout_marginTop="20dp"
        android:id="@+id/textView15"
        android:layout_width="match_parent"
        android:layout_height="117dp"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/open_sans_semibold"
        android:text="cafex."
        android:textAlignment="center"
        android:textColor="@color/button"
        android:textSize="50sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="registrasi"
        android:textAlignment="center"
        android:textColor="@color/button"
        android:textSize="30dp"
        android:layout_marginBottom="5dp"
        android:textStyle="bold" />


        <EditText
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="20dp"
            android:gravity="center"
            android:id="@+id/nama_user"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="4dp"
            android:background="@drawable/view"
            android:backgroundTint="@android:color/white"
            android:hint="  Username"
            android:inputType="textPersonName"
            android:textColor="@color/button" />

        <EditText
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="20dp"
            android:gravity="center"
            android:id="@+id/email_user"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/view"
            android:backgroundTint="@android:color/white"
            android:hint=" Email"
            android:layout_marginBottom="4dp"
            android:inputType="textEmailAddress"
            android:textColor="@color/button" />


        <EditText
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="20dp"
            android:gravity="center"
            android:id="@+id/password_user"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="4dp"
            android:background="@drawable/view"
            android:backgroundTint="@android:color/white"
            android:hint="  Password"
            android:inputType="textPassword"
            android:textColor="@color/button" />


        <EditText
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="20dp"
            android:gravity="center"
            android:id="@+id/nohp_user"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/view"
            android:backgroundTint="@android:color/white"
            android:hint="  Nomor Handphone "
            android:layout_marginBottom="4dp"
            android:inputType="number"
            android:textColor="@color/button" />

        <EditText
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="20dp"
            android:gravity="center"
            android:id="@+id/noktp_user"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/view"
            android:backgroundTint="@android:color/white"
            android:hint="  Nomor KTP  "
            android:layout_marginBottom="4dp"
            android:inputType="number"
            android:textColor="@color/button" />

        <EditText
            android:gravity="center"
            android:id="@+id/id_cabang"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/view"
            android:backgroundTint="@android:color/white"
            android:hint="  Id Cabang  "
            android:layout_marginBottom="4dp"
            android:inputType="number"
            android:textColor="@color/button" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="@drawable/custom_input"
        android:textColorHint="@color/button"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="10dp"
        app:boxBackgroundColor="@color/background"
        android:layout_marginHorizontal="20dp">

        <Spinner
            android:gravity="center"
            android:layout_gravity="center"
            android:outlineSpotShadowColor="@color/background"
            android:id="@+id/spinnerJabatanUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:popupBackground="@color/background"
            android:spinnerMode="dropdown" />

    </com.google.android.material.textfield.TextInputLayout>


    <Button
        android:id="@+id/btnRegister"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/view"
        android:backgroundTint="@android:color/white"
        android:text="REGISTER"
        android:textStyle="bold"
        android:textColor="@android:color/black" />


</LinearLayout>
</ScrollView>