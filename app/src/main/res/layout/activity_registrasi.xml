<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linierLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    android:paddingLeft="30dp"
    android:paddingRight="30dp"
    tools:context=".MenuAuth.RegistrasiUser">
    <Button
        android:id="@+id/backregistrasilogin"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@android:color/white"
        android:background="@drawable/view"
        android:text="LOGIN"
        android:drawableLeft="@drawable/ic_back"
        android:padding="5dp"/>

    <TextView
        android:layout_marginTop="20dp"
        android:id="@+id/textView15"
        android:layout_width="match_parent"
        android:layout_height="117dp"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/open_sans_semibold"
        android:text="cafex."
        android:textAlignment="center"
        android:textColor="@color/button"
        android:textSize="50sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="REGISTRASI"
        android:textAlignment="center"
        android:textColor="@color/button"
        android:textSize="30dp"
        android:layout_marginBottom="10dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginHorizontal="0dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Username"
            android:textStyle="bold"
            android:textSize="15dp"
            android:textColor="@color/button"
            android:layout_weight="3"/>

        <EditText
            android:layout_weight="1"
            android:layout_marginHorizontal="0dp"
            android:gravity="center"
            android:id="@+id/nama_user"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="4dp"
            android:background="@drawable/view"
            android:backgroundTint="@android:color/white"
            android:hint="  Username"
            android:inputType="textPersonName"
            android:textColor="@color/button" />
    </LinearLayout>
    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="0dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textStyle="bold"
            android:textSize="15dp"
            android:textColor="@color/button"
            android:layout_weight="3"/>
        <EditText
            android:layout_weight="1"
            android:layout_marginHorizontal="0dp"
            android:gravity="center"
            android:id="@+id/email_user"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/view"
            android:backgroundTint="@android:color/white"
            android:hint=" Email"
            android:layout_marginBottom="4dp"
            android:inputType="textEmailAddress"
            android:textColor="@color/button" />
    </LinearLayout>
     <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="0dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Password"
            android:textStyle="bold"
            android:textSize="15dp"
            android:textColor="@color/button"
            android:layout_weight="3"/>
        <EditText
            android:layout_weight="1"
            android:layout_marginHorizontal="0dp"
            android:gravity="center"
            android:id="@+id/password_user"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="4dp"
            android:background="@drawable/view"
            android:backgroundTint="@android:color/white"
            android:hint="  Password"
            android:inputType="textPassword"
            android:textColor="@color/button" />
     </LinearLayout>

     <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="0dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No HP"
            android:textStyle="bold"
            android:textSize="15dp"
            android:textColor="@color/button"
            android:layout_weight="3"/>
        <EditText
            android:layout_weight="1"
            android:layout_marginHorizontal="0dp"
            android:gravity="center"
            android:id="@+id/nohp_user"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/view"
            android:backgroundTint="@android:color/white"
            android:hint="  Nomor Handphone "
            android:layout_marginBottom="4dp"
            android:inputType="number"
            android:textColor="@color/button" />
     </LinearLayout>
     <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="0dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No KTP"
            android:textStyle="bold"
            android:textSize="15dp"
            android:textColor="@color/button"
            android:layout_weight="3"/>
        <EditText
            android:layout_weight="1"
            android:layout_marginHorizontal="0dp"
            android:gravity="center"
            android:id="@+id/noktp_user"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/view"
            android:backgroundTint="@android:color/white"
            android:hint="  Nomor KTP  "
            android:layout_marginBottom="4dp"
            android:inputType="number"
            android:textColor="@color/button" />
     </LinearLayout>
     <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="0dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Cabang"
            android:textStyle="bold"
            android:textSize="15dp"
            android:textColor="@color/button"
            android:layout_weight="3"/>
         <Spinner
             android:id="@+id/spinnerCabang"
             android:background="@drawable/gradient_spinner"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginRight="0dp"
             android:layout_gravity="center"
             android:layout_marginVertical="5dp"
             android:layout_weight="1"
             android:gravity="center"/>
     </LinearLayout>
     <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="0dp">

        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Jabatan"
            android:textStyle="bold"
            android:textSize="15dp"
            android:textColor="@color/button"
            android:layout_weight="3"/>
         <Spinner
             android:id="@+id/spinnerJabatanUser"
             android:background="@drawable/gradient_spinner"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginRight="0dp"
             android:layout_gravity="center"
             android:layout_marginVertical="5dp"
             android:layout_weight="1"
             android:gravity="center"/>
     </LinearLayout>


    <Button
        android:id="@+id/btnRegister"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginHorizontal="0dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/view"
        android:backgroundTint="@android:color/white"
        android:text="REGISTER"
        android:textStyle="bold"
        android:textColor="@android:color/black" />


</LinearLayout>
</ScrollView>