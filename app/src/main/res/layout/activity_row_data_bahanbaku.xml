<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".MenuInventori.TampilDetailInventori">

    <androidx.cardview.widget.CardView
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="10dp"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="@color/background">
        <LinearLayout
           android:layout_marginHorizontal="0dp"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <TextView
                        android:gravity="center"
                        android:text="Qty"
                        android:layout_weight="4"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="1dp"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"
                        android:textSize="12dp" />
                    <TextView

                        android:gravity="center"
                        android:text="Exp "
                        android:layout_weight="3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="1dp"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"
                        android:textSize="12dp" />
                    <TextView
                        android:gravity="center"
                        android:layout_weight="3"
                        android:textStyle="bold"
                        android:text="Masuk"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:textColor="@android:color/black"
                        android:textSize="12dp" />
                    <TextView
                        android:gravity="center"
                        android:layout_weight="3"
                        android:textStyle="bold"
                        android:text="Keluar"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:textColor="@android:color/black"
                        android:textSize="12dp" />

                </LinearLayout>
                <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/jumlahbahanbaku"
                        android:gravity="left"
                        android:text="x 1"
                        android:layout_weight="4"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="1dp"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"
                        android:textSize="12dp" />
                    <TextView
                        android:id="@+id/hargabahanbaku"
                        android:gravity="left"
                        android:text="Expired Date "
                        android:layout_weight="3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="1dp"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"
                        android:textSize="12dp" />
                    <TextView
                        android:background="@android:color/holo_green_light"
                        android:id="@+id/tanggalmasuk"
                        android:gravity="center"
                        android:layout_weight="3"
                        android:textStyle="bold"
                        android:text="Tanggal masuk"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:textColor="@android:color/black"
                        android:textSize="12dp" />
                    <TextView
                        android:background="@android:color/holo_red_light"
                        android:id="@+id/tanggalkeluar"
                        android:gravity="center"
                        android:layout_weight="3"
                        android:textStyle="bold"
                        android:text="Tanggal Keluar"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:textColor="@android:color/black"
                        android:textSize="12dp" />

                </LinearLayout>

                </LinearLayout>


            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>