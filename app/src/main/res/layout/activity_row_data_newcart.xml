<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".MenuTransaksi.TampilCheckoutMenu">

    <androidx.cardview.widget.CardView
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="10dp"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="@android:color/white">
        <LinearLayout

            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <LinearLayout

            android:id="@+id/produk"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/foto_produk"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:src="@color/background" />

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginVertical="5dp"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/kategoriItem"
                        android:layout_width="match_parent"
                        android:layout_weight="2"
                        android:layout_height="wrap_content"
                        android:layout_margin="1dp"
                        android:hint="Kategori"
                        android:textColor="@color/button"
                        android:textSize="15dp" />

                </LinearLayout>
                <TextView
                    android:hint="nama"
                    android:id="@+id/namaItem"
                    android:layout_weight="2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp"
                    android:textColor="@color/button"
                    android:textSize="15dp"
                    android:textStyle="bold" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginVertical="5dp"
                    android:orientation="horizontal">
<!--                    <TextView-->
<!--                        android:layout_width="match_parent"-->
<!--                        android:layout_weight="2"-->
<!--                        android:layout_height="wrap_content"-->
<!--                        android:layout_margin="1dp"-->
<!--                        android:text="x"-->
<!--                        android:gravity="left"-->
<!--                        android:textColor="@color/button"-->
<!--                        android:textSize="15dp" />-->
                    <TextView
                        android:id="@+id/jumlahItem"
                        android:layout_width="match_parent"
                        android:layout_weight="2"
                        android:layout_height="wrap_content"
                        android:layout_margin="1dp"
                        android:hint="1"
                        android:textColor="@color/button"
                        android:textSize="15dp" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_weight="2"
                        android:layout_height="wrap_content"
                        android:layout_margin="1dp"
                        android:text="Rp "
                        android:gravity="right"
                        android:textStyle="bold"
                        android:textColor="@color/button"
                        android:textSize="15dp" />
                    <TextView
                        android:hint="harga"
                        android:id="@+id/hargaItem"
                        android:layout_weight="2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="1dp"
                        android:textColor="@color/button"
                        android:textSize="15dp"
                        android:textStyle="bold" />
                </LinearLayout>

                <TextView
                    android:id="@+id/idDetailtransaksi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp"
                    android:textColor="@color/button"
                    android:textSize="1dp" />
            </LinearLayout>
            </LinearLayout>
            <Button
                android:id="@+id/hapusitemkeranjang"
                android:layout_marginHorizontal="10dp"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:paddingBottom="1dp"
                android:layout_marginBottom="1dp"
                android:textSize="15dp"
                android:textStyle="bold"
                android:background="@drawable/view"
                android:text="batal"
                android:backgroundTint="@color/background"
                android:gravity="center" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>