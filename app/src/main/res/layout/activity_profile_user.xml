<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    xmlns:tools="http://schemas.android.com/tools">
    <ScrollView
        android:layout_above="@+id/navbar"
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        android:orientation="vertical"
        tools:context=".MenuAuth.ProfileUser">
        <TextView
            android:id="@+id/btnupdateprofileuser"
            android:layout_marginTop="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/ic_save"
            android:layout_marginHorizontal="20dp"
            android:text="Save Profile"
            android:layout_gravity="right"
            android:gravity="right"
            android:textSize="10dp"
            android:textColor="@color/button"/>
        <TextView
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Profil"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="30dp"
            android:textColor="@color/button"/>
        <ImageView
            android:layout_gravity="center"
            android:background="@drawable/ic_profile"
            android:layout_marginTop="30dp"
            android:padding="70dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@color/button"/>
        <LinearLayout
            android:layout_marginTop="40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginHorizontal="40dp">
            <TextView
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nama"
                android:textStyle="bold"
                android:textSize="15dp"
                android:textColor="@color/button"/>
            <EditText
                android:id="@+id/updatenamauser"
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Nama User"
                android:textSize="15dp"
                android:textColor="@color/button"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginHorizontal="40dp">
            <TextView
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="NomorHp"
                android:textStyle="bold"
                android:textSize="15dp"
                android:textColor="@color/button"/>
            <EditText
                android:id="@+id/updatenohpuser"
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Nomor HP"
                android:textSize="15dp"
                android:textColor="@color/button"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginHorizontal="40dp">
            <TextView
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="NomorKtp"
                android:textStyle="bold"
                android:textSize="15dp"
                android:textColor="@color/button"/>
            <EditText
                android:id="@+id/updatenoktpuser"
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Nomor KTP"
                android:textSize="15dp"
                android:textColor="@color/button"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginHorizontal="40dp">
            <TextView
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textStyle="bold"
                android:textSize="15dp"
                android:textColor="@color/button"/>
            <EditText
                android:id="@+id/updateemailuser"
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Email User"
                android:textSize="15dp"
                android:textColor="@color/button"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginHorizontal="40dp">
            <TextView
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Jabatan"
                android:textStyle="bold"
                android:textSize="15dp"
                android:textColor="@color/button"/>
            <TextView
                android:id="@+id/updatejabatanuser"
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Jabatan"
                android:textSize="15dp"
                android:textColor="@color/button"/>

        </LinearLayout>


    </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/navbar"
        android:padding="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/view"
        android:backgroundTint="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btndashboard"
            android:background="@android:color/white"
            android:drawableTop="@drawable/ic_home"
            android:layout_weight="3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Home"/>
        <Button
            android:background="@android:color/white"
            android:id="@+id/btnhistory"
            android:drawableTop="@drawable/ic_history"
            android:layout_weight="3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Laporan"/>
        <Button
            android:id="@+id/btnprofile"
            android:background="@android:color/white"
            android:drawableTop="@drawable/ic_profile"
            android:layout_weight="3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Profile"/>
    </LinearLayout>
</RelativeLayout>